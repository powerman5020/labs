apiVersion: v1
kind: PersistentVolume
metadata:
  name: wso2ei-logs-pv-volume
  labels:
    type: local
spec:
  storageClassName: manual
  capacity:
    storage: 20Gi
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: "/mnt/wso2ei-logs"
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: nombre
          operator: In
          values:
          - dev2
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: wso2ei-logs-pv-claim
spec:
  storageClassName: manual
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 20Gi
